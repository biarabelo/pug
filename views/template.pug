html
  head
    title= pageTitle
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="styles.css")
  body
    .container
      .jumbotron.pastel-primary
        h1.display-4= pageTitle
        p.lead= pageDescription
        p.lead= observacao

      ul.list-group
        each item in items
          li.list-group-item.pastel-secondary= item          
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")

extends layout

block content
  h1= pageTitle
  p= pageDescription

  // Exemplo de tabela
  if tabela
    table
      thead
        tr
          th Nome
          th Idade
          th Cidade
      tbody
        each item in tabela
          tr
            td= item.nome
            td= item.idade
            td= item.cidade

  p= observacao
